{
  "manifest_version": 3,
  "name": "PR Code Reviewer",
  "version": "1.0",
  "permissions": [
      "activeTab",
      "scripting",
      "storage"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
      {
          "resources": ["libs/*"],
          "matches": ["<all_urls>"]
      }
  ]
}
