{
  "name": "pr-reviewer",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "parcel src/popup/index.html src/options/index.html src/background/index.js src/content/extractors/index.js manifest.json public/assets/icons/icon.png",
    "build:popup": "parcel build src/popup/index.html --dist-dir dist --public-url . --no-source-maps",
    "build:options": "parcel build src/options/index.html --dist-dir dist/options --public-url . --no-source-maps",
    "build:background": "parcel build src/background/index.js --dist-dir dist/background --no-source-maps",
    "build:content": "parcel build src/content/extractors/index.js --dist-dir dist/content --no-source-maps",
    "build:manifest": "copy manifest.json dist\\manifest.json",
    "build:icons": "parcel build public/assets/icons/icon.png --dist-dir dist/icons --no-source-maps",
    "build": "npm run build:popup && npm run build:options && npm run build:background && npm run build:content && npm run build:manifest && npm run build:icons"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.13.3",
    "@parcel/namer-default": "^2.10.3",
    "@parcel/optimizer-css": "^2.10.3",
    "@parcel/optimizer-esbuild": "^2.10.3",
    "@parcel/packager-raw-url": "^2.13.3",
    "@parcel/resolver-default": "^2.10.3",
    "@parcel/transformer-css": "^2.10.3",
    "@parcel/transformer-js": "^2.10.3",
    "@types/chrome": "^0.0.254",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.20",
    "parcel": "^2.10.3",
    "parcel-resolver-ts-base-url": "^1.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@babel/preset-env": "^7.25.4",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "highlight.js": "^11.11.0",
    "marked": "^15.0.4"
  }
}
